/*
 * Main container
 * -------------------------------------------------- */
.main-container
  lost-flex-container row
  margin-bottom 8rem
  // Tablet and Desktop
  +above(xs)
    lost-column 3/4
  // Mobile
  +below(xs)
    lost-column 1/1
    margin-top 4rem

/*
 * Text content
 * -------------------------------------------------- */
.text-content
  // Tablet and Desktop
  +above(xs)
    lost-column 2/3
  // Mobile
  +below(xs)
    lost-column 1/1


/*
 * Cat banner
 * -------------------------------------------------- */
.banner__cat
  // Tablet and Desktop
  +above(xs)
    lost-column 1/3 1
  // Mobile
  +below(xs)
    lost-column 1/1
    margin-top 2rem

  img
    border-radius 20px

/*
 * bread banner
 * -------------------------------------------------- */
.banner__bread
  lost-column 1/1 1
  margin-top 4rem
  position relative

  /*
   * Description
   * ---------------------------------- */
  &--description
    font(text, primary, bold)
    position absolute
    bottom 0
    left 0
    width 100%
    padding 1.5rem
    text-align center
    color #fff
    background rgba(#000, .7)
