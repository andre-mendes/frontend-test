.main-footer
  padding-top 4rem
  background-color $gray-light


/*
 * Footer blocks
 * -------------------------------------------------------------------- */
.footer
  lost-flex-container row

  /*
   * Menus list
   * -------------------------------------------------- */
  &__menus
    // Tablet and Desktop
    +above(xs)
      lost-column 2/3
    // Mobile
    +below(xs)
      lost-column 1/1
      margin-bottom 4rem

  /*
   * Footer Title
   * ---------------------------------- */
  &__title
    font(text-large, primary, regular)
    color $text-color
    width 100%

  /*
   * Footer List
   * ---------------------------------- */
  &__list
    position relative
    display flex
    flex-wrap wrap
    flex-direction column
    align-self flex-start
    max-height 140px
    width 100%
    margin-right 2.5rem
    list-style none
    margin-bottom 4rem

  /*
   * List ITEM
   * -------------------------------------------------- */
  .list
    lost-column 1/2 2 0 no-flex
    // flex-direction column

    &__item:hover
      text-decoration underline

  /*
   * Align geral link inside footer
   * -------------------------------------------------- */
  .link__geral--container
    lost-flex-container row
    width 100%

  .link__geral
    lost-column 1/2 2 0 no-flex



  /*
   * Footer logos
   * -------------------------------------------------- */
  &__logos
    // Tablet and Desktop
    +above(xs)
      lost-column 1/3
    // Mobile
    +below(xs)
      lost-column 1/1

    /*
     * Footer logos - item container
     * ---------------------------------- */
    &--container
      lost-flex-container row
      margin-top 3rem

    /*
     * Footer logos - item
     * ---------------------------------- */
    &--item
      lost-column 1/2 2
      align-items center
      text-align center
      transition opacity .2s
      will-change opacity
      &:hover
        opacity .8
      &:not(:nth-last-child(-n+2))
        margin-bottom 2rem

